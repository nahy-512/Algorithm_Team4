<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dialog_add_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:outlineProvider">none</item>
        <item name="fontFamily">@font/bmjua</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_round_all_btn</item>
    </style>

    <style name="dialog_add_input_et">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">8</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:background">@drawable/bg_round_all_btn</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/custom_font_family</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/placeholder</item>
    </style>

    <style name="dialog_add_input_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="fontFamily">@font/bmjua</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <!-- 토글 -->
    <style name="toggle">
        <item name="thumbTint">@color/white</item>
        <item name="track">@drawable/style_toggle_btn</item>
        <item name="android:thumb">@drawable/style_toggle_thumb</item>
        <item name="android:enabled">true</item>
    </style>

</resources>