<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="16dp"
    android:padding="16dp"
    android:elevation="4dp"
    android:background="@drawable/bg_round_all_ingredient_item">

    <TextView
        android:id="@+id/item_ingredient_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_ingredient_d_day_tv"
        tools:text="재료 이름"/>

    <TextView
        android:id="@+id/item_ingredient_d_day_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D-13 "
        android:textAlignment="textEnd"
        android:textStyle="italic"
        android:textColor="@color/dark_gray"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_ingredient_name_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_ingredient_name_tv"/>

    <TextView
        android:id="@+id/item_ingredient_amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/item_ingredient_amount_tv"
        android:textColor="@color/dark_gray"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/item_ingredient_name_tv"
        app:layout_constraintStart_toStartOf="@id/item_ingredient_name_tv"/>

    <TextView
        android:id="@+id/item_ingredient_expireDate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="2023-12-03"
        android:textColor="#8C8C8C"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/item_ingredient_amount_tv"
        app:layout_constraintStart_toStartOf="@id/item_ingredient_amount_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>